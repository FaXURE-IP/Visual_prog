<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="WeatherViewer.MainWindow"
        Title="Weather Forecast"
        Width="400"
        Height="450">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Name="WeatherInfoTextBlock" Text="Loading weather data..." />
            <StackPanel Name="WeatherForecastPanel" Margin="0,10,0,0"/>
            <TextBox Name="CityTextBox" Width="200" Margin="0,10,0,0" Text="Novosibirsk" />
            <Button Content="Update" Click="UpdateButton_Click" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
