<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:FileExplorer"
        x:Class="FileExplorer.MainWindow"
        Title="File Explorer" Width="800" Height="600">
        <Window.Resources>
            <local:PathConverter x:Key="PathConverter" />
        </Window.Resources>
    
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
    
            <ListBox x:Name="listBox" Grid.Column="0" Margin="10">
                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="local:FileSystemItem">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="16" Height="16" Margin="0,0,5,0"
                                Source="{Binding IconPath, Converter={StaticResource PathConverter}}" />
    
                            <TextBlock Text="{Binding Name}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
    
            <Image x:Name="imageView" Grid.Column="1" Margin="10" />
        </Grid>
</Window>